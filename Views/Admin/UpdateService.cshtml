@model kuaforBerberOtomasyon.Models.DTO.ServiceUpdateDto

@{
    ViewData["Title"] = "Hizmet Güncelle";
}

<h2>Hizmet Güncelle</h2>

<form asp-controller="Admin" asp-action="UpdateService" method="post">
    <!-- Gizli alan ile ServiceID'yi formda gönderiyoruz -->
    <input type="hidden" asp-for="ServiceID" />

    <div class="form-group">
        <label for="Name">Hizmet Adı</label>
        <input asp-for="Name" class="form-control" id="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="Duration">Süre (dakika)</label>
        <input asp-for="Duration" type="number" class="form-control" id="Duration" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="Price">Fiyat</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" id="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
</form>

<a href="@Url.Action("Services", "Admin")" class="btn btn-secondary mt-3">Geri</a>
