﻿@using kuaforBerberOtomasyon.Models.DTO

@model List<ServicesRespond>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<a class="btn btn-primary float-end mb-2 mt-2" asp-area="" asp-controller="Admin" asp-action="PoliklinikEkle">Poliklinik Ekle</a>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Hizmet</th>
            <th scope="col">Süre</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.serviceId</td>
                <td>@item.Name</td>
                <td>@item.Duration</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-danger" asp-area="" asp-controller="Admin" asp-action="DeleteService" asp-route-id="@item.serviceId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>