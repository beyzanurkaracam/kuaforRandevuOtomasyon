@model kuaforBerberOtomasyon.Models.DTO.EmployeeUpdateDto

<h2>Çalışan Güncelle</h2>

<form asp-action="UpdateEmployee" method="post">
    <input type="hidden" asp-for="EmployeeID" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hizmetler</label>
        @foreach (var service in Model.AllServices)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input"
                       name="SelectedServiceIds"
                       value="@service.ServiceID"
                @(Model.SelectedServiceIds.Contains(service.ServiceID) ? "checked" : "") />
                <label class="form-check-label">@service.Name</label>
            </div>
        }
        <span asp-validation-for="SelectedServiceIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
