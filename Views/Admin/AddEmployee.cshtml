@model kuaforBerberOtomasyon.Models.DTO.AdminEmployeeRequest
@{
    ViewData["Title"] = "Add Employee";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Add Employee</h2>

<form asp-action="AddEmployee" method="post">
  

    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" id="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ServiceName">Service</label>
        <select asp-for="ServiceId" class="form-control" id="ServiceId" multiple="multiple">
            @foreach (var item in Model.ServiceList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
